{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "eastus"
        },
        "spokeVnetAddressSpace": {
            "type": "string"
        },
        
        "clusterSubnetPrefix": {
            "type": "string"
        },
        "appgatewaySubnetPrefix": {
            "type": "string"
        },
        "privateEndpointSubnetPrefix": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {
        "orgAppId": "aks-eslz",
        "clusterVNetName": "[concat('vnet-hub-spoke-', variables('orgAppId'), '-00')]",
        "subscriptionID": "[subscription().id]",
        "hubVNetName": "[concat('vnet-', resourceGroup().location, '-hub')]",
        "routeTableName": "[concat('route-', variables('clusterVNetName'), '-clusternodes-to-hub')]",
        "hubLaName": "[concat('la-',resourceGroup().location,'-',uniqueString(resourceId('Microsoft.Network/virtualNetworks',variables('hubVnetName'))))]",
        "workSpaceID" : "[resourceId('microsoft.operationalinsights/workspaces',variables('hubLaName'))]"
        
    },
    "resources": [
        {
            "type": "Microsoft.Network/routeTables",
            "apiVersion": "2019-11-01",
            "location": "[parameters('location')]",
            "name": "[variables('routeTableName')]",
            "properties": {
                "routes": [
                    {
                        "name": "r-nexthop-to-fw",
                        "properties": {
                            "nextHopType": "VirtualAppliance",
                            "addressPrefix": "0.0.0.0/0",
                            "nextHopIpAddress": "[reference(resourceId('Microsoft.Network/azureFirewalls', concat('fw-', parameters('location'), '-hub')), '2019-11-01', 'Full').properties.ipConfigurations[0].properties.privateIpAddress]"                            
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "name": "[variables('clusterVNetName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/routeTables', variables('routeTableName'))]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('spokeVnetAddressSpace')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "aks-subnet",
                        "properties": {
                            "addressPrefix": "[parameters('clusterSubnetPrefix')]",
                            "serviceEndpoints": [
                            ],
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', variables('routeTableName'))]"
                            },
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    },
                    {
                        "name": "aks-privateEndpoint",
                        "properties": {
                            "addressPrefix": "[parameters('privateEndpointSubnetPrefix')]",
                            "privateEndpointNetworkPolicies": "Disabled" 
                        }                        
                    },
                    {
                        "name": "aks-applicationgateways",
                        "properties": {
                            "addressPrefix": "[parameters('appgatewaySubnetPrefix')]"
                        }
                    }
                ],
                "enableDdosProtection": false,
                "enableVmProtection": false
            }
        },        
        {
            "type": "Microsoft.Network/virtualNetworks/providers/diagnosticSettings",
            "apiVersion": "2017-05-01-preview",
            "name": "[concat(variables('clusterVNetName'), '/Microsoft.Insights/toHub')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', variables('clusterVNetName'))]"
            ],
            "properties": {
                "workspaceId": "[variables('workSpaceID')]",
                "metrics": [
                    {
                        "category": "AllMetrics",
                        "enabled": true
                    }
                ]
            }
        }        
    ],
    "outputs": {
        "spokeVnetId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks',variables('clusterVNetName'))]"
        },
        "spokeVnetName": {
            "type": "string",
            "value": "[variables('clusterVNetName')]"
        },
        "spokeRGName": {
            "type": "string",
            "value": "[resourceGroup().name]"
        }
    }
}
